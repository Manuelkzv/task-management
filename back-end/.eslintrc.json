{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "prefer-const": 2,
    "no-async-promise-executor": "off",
    "no-extra-semi": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-unexpected-multiline": "off"
  }
}
